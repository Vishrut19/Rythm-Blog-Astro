---
import { Image } from "astro:assets";
---

<header
  class="flex justify-between items-center px-24 py-12 max-w-7xl mx-auto w-full max-sm:px-5 max-sm:py-10"
>
  <a href="/" class="flex gap-x-4 items-center">
    <Image
      src="/heartbeat.png"
      alt="Heartbeat icon"
      width={60}
      height={60}
      format="webp"
      class="rounded-2xl aspect-thumbnail object-cover"
    />
    <p class="uppercase text-3xl text-zinc-900 max-sm:text-2xl">blog</p>
  </a>
  <ul class="flex gap-x-8 max-sm:gap-x-4">
    <li>
      <a
        href="/"
        class="text-teal-900 font-bold hover:text-teal-700 transition-colors"
        >Home</a
      >
    </li>
    <li>
      <a
        href="/about"
        class="text-teal-900 font-bold hover:text-teal-700 transition-colors"
        >About</a
      >
    </li>
    <li>
      <a
        href="/blog"
        class="text-teal-900 font-bold hover:text-teal-700 transition-colors"
        >Blog</a
      >
    </li>
  </ul>
</header>
